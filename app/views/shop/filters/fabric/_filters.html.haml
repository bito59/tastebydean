.left
.middle
	.mb
		%h3= select_title
		%h4= t('products', count: products.length)
	.tb
		%li= selected_link('workshop', shop_workshop_path)
		%li= '|'
		%li= selected_link('accessories', shop_products_path(kind: 'accessory'))
		%li= '|'
		%li= selected_link('all_fabrics', shop_fabrics_path(kind: 'fabric'))
		- FabricFamily.all.each do |f|
			%li= '|'
			%li= selected_link(f.title, shop_fabrics_path(kind: 'fabric', family: f.title))

.right
	.mb
		= render partial: 'shop/filters/equalizer'
	.tb
		%h5= t('fabrics', count: products.count)