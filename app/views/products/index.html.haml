#thread
	= link_to "Home", root_path
	- if params[:kind] == "model-female" || params[:kind] == "model-male"
		- unless params[:customer].blank?
			= link_to params[:customer], products_path(kind: "model", customer: params[:customer])
		- else 
			= link_to "all products", products_path(kind: "model")		
	- elsif params[:kind] == "material"
		= link_to "fabrics", products_path(kind: "model")
		

#fast_link
	= render partial: 'main/search_links'

