.product{ id: "item_#{product.id}" }
	.show_product
		= product.title
		= product.description
		= product.activated
		= product.kind
		= product.family
		= product.customer
		= product.new_product
		= product.price
		= product.price_unit
		= product.measure
		= product.measure_unit
		= product.created_at
		= link_to 'Gallery', gallery_path(product.id), class: "btn"
		= link_to 'Destroy', product, method: :delete, remote: true, data: { confirm: 'Are you sure?' }
		= link_to 'Edit', edit_product_path(product), remote: true, class: "btn"