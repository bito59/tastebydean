!!! 5
%html
  %title= 'Bienvenue chez Dean !'
  %meta{charset: "utf-8"}
  %meta{content: "description", content: "Designez votre tenue sur mesure..."}
  %meta{name: "viewport", content: "width=device-width, initial-scale=1.0, maximum-scale=1.0"}

  = csrf_meta_tags
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  - if Rails.env.production?
    %script
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-88492107-2', 'auto');

  %body
    %header#header.mb-hide.modal-fade
      - if @root == true
        = render partial: 'layouts/header_welcome'
      - else
        = render partial: 'layouts/header_others'
    %main#main.mb-hide.modal-fade
      = yield
      =# render partial: 'layouts/devise_modal'
    %footer#footer.modal-fade
      = render partial: 'layouts/footer'

    %section#devise_modal.tb
      = render partial: 'layouts/devise_modal'      
    %section#mb_main_menu.mb-menu
      = render partial: 'layouts/mb_main_menu'
    - if defined?(@path)
      %section#mb_filter.mb-menu
        = render partial: 'shop/' + @path + '/mb_filters'    
    %section#flash_msg
      = render_flash
