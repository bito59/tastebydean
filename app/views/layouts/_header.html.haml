%header.modal-fade
	- if @root == true
		.logo.mb
			= link_to_icon('logo-white-mb', 119, 53, root_path)
		.links.mb
			%li
				= link_to_icon('filter-white-mb', 25, 25, root_path, {id: 'open_mb_main_menu', remote: true})
		.logo.tb
			= link_to_icon('logo-white', 94, 43, root_path)
		.links.tb
			%li= link_to t('layouts.main_filters.creation'), showroom_products_path(kind: 'creation'), class: 'white'
			%li= link_to t('layouts.main_filters.collection'), shop_products_path(kind: 'model'), class: 'white'
			%li= link_to t('layouts.main_filters.shop'), shop_products_path(kind: 'accessory'), class: 'white'
			%li
				- if user_signed_in?
					= link_to_icon('user_green', 20, 20, destroy_user_session_path, {method: :delete})
				- else
					= link_to_icon('user_white', 20, 20, new_user_session_path, {id: 'connection_modal', remote: true})
				= link_to_icon('cart_white', 20, 20, cart_path)
	- else
		.logo-left
			%li= link_to_icon('logo-round', 50, 50, root_path)
			%li
				%h5= select_logo_title

		.links.mb
			%li
				= link_to_icon('filter-red-mb', 25, 25, root_path, {id: 'open_mb_main_menu', remote: true})
		.links.tb
			%li= selected_header_link('creation', showroom_products_path(kind: 'creation'))
			%li= selected_header_link('collection', shop_products_path(kind: 'model'))
			%li= selected_header_link('shop', shop_products_path(kind: 'accessory'))
			%li.icons
				- if user_signed_in?
					= link_to_icon('user_green', 20, 20, destroy_user_session_path, {method: :delete})
				- else
					= link_to_icon('user_red', 20, 20, new_user_session_path, {id: 'connection_modal', remote: true})
				= link_to_icon('cart_red', 20, 20, cart_path)
