%section.user.c2
	%h4= t('user.connection').upcase
	%h4= t('user.register').upcase
	= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
		=# f.email_field :email, autofocus: true, placeholder: t('user.email'), class: 'large'
		.input-field
			= f.text_field :email, maxlength: "100", required: true, type: 'email', pattern: '[^@]+@[^@.]+\.[^@]+', class: 'validate'
			= f.label :email, t('user.email')

		.input-field
			= f.password_field :password, autocomplete: "off", required: true, placeholder: t('user.password'), class: 'large'
		- if devise_mapping.rememberable?
			=# f.label :remember_me, t('user.remember_me')
		= f.submit t('common.validate'), class: 'btn btn-valid'
		= link_to t('user.password_forgotten'), new_password_path(resource_name)
