if ($('#table_item_<%= @product.id %>').closest('#<%= @product.kind %>_area').length) {
	$('#table_item_<%= @product.id %>').replaceWith("<%= j render partial: 'admin/products/show_product_to_admin', locals: {product: @product } %>");
}
else {
	$('#table_item_<%= @product.id %>').remove();
	$('#<%= @product.kind %>_area').append("<%= j render partial: 'admin/products/show_product_to_admin', locals: {product: @product } %>");
}
$('#edit_item_<%= @product.id %>').remove();