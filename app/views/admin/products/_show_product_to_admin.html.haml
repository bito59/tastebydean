%table{ id: "table_item_#{product.id}" }
	%tr
		%td= product.title
		%td= product.kind
		%td= product.customer
		%td= product.family
		%td= product.description
		%td= product.price
		%td= product.price_unit
		%td= product.measure
		%td= product.measure_unit
		%td= product.activated
		%td= product.event
		%td= link_to count_pictures(product), gallery_path(product.id), class: "btn"
		%td= link_to 'Edit', edit_product_path(product), remote: true, class: "btn"
		%td= link_to 'Destroy', product, method: :delete, remote: true, data: { confirm: 'Are you sure?' }